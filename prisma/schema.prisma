generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id         Int         @default(autoincrement()) @id
  name       String      @unique
  challenges Challenge[] @relation(references: [id])
}

model Challenge {
  id          Int        @default(autoincrement()) @id
  name        String     @unique
  description String
  level       Int
  categories  Category[] @relation(references: [id])
}

model User {
  id       Int    @default(autoincrement()) @id
  email    String @unique
  nickname String @unique
  password String
}